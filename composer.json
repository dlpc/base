{
  "name": "tourze/base",
  "description": "途者PHP框架-核心部分",
  "minimum-stability": "stable",
  "license": "MIT",
  "authors": [
    {
      "name": "tourze",
      "email": "dev@tourze.com"
    }
  ],
  "require": {
    "filp/whoops": "^1.1",
    "doctrine/inflector": "^1.0",
    "hassankhan/config": "0.8.*",
    "respect/validation": "^0.9.3",
    "egulias/email-validator": "^1.2",
    "symfony/filesystem": "^2.7",
    "symfony/var-dumper": "^2.7",
    "ircmaxell/random-lib": "^1.1"
  },
  "require-dev": {
    "phpunit/phpunit": "^4.7"
  },
  "autoload": {
    "psr-4": {
      "tourze\\Base\\": "src/"
    },
    "files": [
      "functions.php",
      "bootstrap.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "tourze\\Base\\": "tests/"
    },
    "files": [
      "bootstrap-dev.php"
    ]
  }
}
